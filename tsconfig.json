{
  "compilerOptions": {
    "target": "ESNext",
    "downlevelIteration": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "moduleResolution": "NodeNext",
    "experimentalDecorators": true,
    "isolatedModules": true,
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"],
      "/*": ["./public/*"],
      "~/*": ["./src/sass/*"]
    }
  },
  "exclude": ["node_modules"]
}
